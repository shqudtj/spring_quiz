<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson06.dao.BookmarkMapper">
 	<insert id="insertBookmark" parameterType="com.quiz.lesson06.domain.Bookmark">
 		INSERT INTO `bookmark`
 		(
 			`name`
			,`url`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{title}
 			,#{address}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectLatestBookmark" parameterType="int" resultType="com.quiz.lesson06.domain.Bookmark">
 		SELECT
			`id`
			,`name`
			,`url`
			,`createdAt`
			,`updatedAt`
		FROM
			`bookmark`
		ORDER BY `id` DESC
		LIMIT 1
 	</select>
 
 </mapper>